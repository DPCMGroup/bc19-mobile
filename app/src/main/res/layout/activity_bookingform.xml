<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.example.bc19mobile.view.act.BookingFormActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/CercaPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="@color/material_on_surface_stroke"
        android:text="Cerca Postazione"
        android:textSize="30sp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="335dp"
        android:text="Stanza:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="410dp"
        android:text="Nome Collega:"
        android:textSize="20sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/cerca"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@color/purple_200"
        android:text="Cerca" />

    <EditText
        android:id="@+id/stanzaTesto"
        android:layout_width="238dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="355dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/dipTesto"
        android:layout_width="238dp"
        android:layout_height="40dp"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="430dp"
        android:singleLine="true"
        android:visibility="invisible"/>






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="89dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="1dp"
            android:layout_marginTop="125dp"
            android:text="Data:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/dataTesto"
            android:layout_width="104dp"
            android:layout_height="40dp"

            android:layout_marginStart="5dp"
            android:layout_marginTop="128dp"
            android:inputType="date"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/SelezionaData"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="123dp"
            android:background="@color/purple_200"
            android:src="@drawable/ic_calendario" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="89dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="195dp"
            android:text="Ora Inizio:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/inizioTesto"
            android:layout_width="104dp"
            android:layout_height="40dp"

            android:layout_marginStart="5dp"
            android:layout_marginTop="199dp"
            android:inputType="time"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/SelezionaInizio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="195dp"
            android:background="@color/purple_200"
            android:src="@drawable/ic_ora"/>

    </LinearLayout>


    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="265dp"
            android:text="Ora Fine:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/fineTesto"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="268dp"
            android:inputType="time"
            android:singleLine="true" />


        <ImageButton
            android:id="@+id/SelezionaFine"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="263dp"
            android:background="@color/purple_200"
            android:src="@drawable/ic_ora"
             />
    </LinearLayout>
</RelativeLayout>